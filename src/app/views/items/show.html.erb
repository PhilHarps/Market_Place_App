<p>
    <dt>Description</dt>
    <dd><%= @item.description %></dd>
</p>
<p>
    <dt>Price</dt>
    <dd><%= number_to_currency @item.price %></dd>
</p>
<p>
    <dt>Size</dt>
    <dd><%= @item.size %></dd>
</p>
